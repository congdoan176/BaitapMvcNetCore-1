
@{
    ViewData["Title"] = "Edit";
}
@model BaiTap1.Models.Student;
<h2>Edit</h2>
<form method="post" action="Update" class="form-group">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="input-group" style="margin:20px">
        <span class="glyphicon glyphicon-user input-group-addon"></span>
        <input type="text" name="name" value="@Model.Name" class="form-control" />
    </div>
    <div class="input-group" style="margin:20px">
        <span class="glyphicon glyphicon-minus input-group-addon"></span>
        <input type="text" name="RollNumber" value="@Model.RollNumber" class="form-control" />
    </div>
    <input type="submit" name="submit" value="Submit" style="margin:20px" />
</form>
